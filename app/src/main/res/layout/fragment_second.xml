            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/textTemper"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:textSize="35sp" />

