<?xml version="1.0" encoding="utf-8"?>
<!-- 類型 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 顏色 -->
    <solid android:color="#E1E0D4" />
    <!-- 文字與邊框的間距 -->
    <padding
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"
        android:left="10dp"
        />
    <!-- 設置圓角 -->
    <corners android:radius="20dp" />

</shape>
